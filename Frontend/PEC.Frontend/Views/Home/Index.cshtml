@model IEnumerable<PEC.Frontend.Models.CarModel>

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Car Inventory</h1>
    <p>Here you can see a complete list of available cars.</p>
</div>

<div id="mainList" class="row">
    @foreach (var carModel in Model)
    {
        var mainImage = carModel.Base64Images.FirstOrDefault() ?? "/car-placeholder-image.jpg";

        <div id="@($"card_number{carModel.Id}")" class="col-sm-2 col-md-3 col-lg-4 mt-2 mr-3">
            <div class="card" style="width: 18rem;">
                <img class="card-img-top" src="@mainImage" alt="Card image cap" style="height: 190px">
                <div class="card-body">
                    <h5 class="card-title">@carModel.Name</h5>
                    <h6 class="card-subtitle text-muted">@carModel.Brand</h6>
                    <p class="card-text">Complete car with all the accessories available for the model.</p>
                    <a href="#" class="btn btn-primary">Let's drive!</a>
                </div>
            </div>
        </div>
    }
</div>



@section footer
{
    <div id="webchat"></div>
    <script src="https://cdn.botframework.com/botframework-webchat/latest/webchat.js"></script>
    <script>
        const styleOptions = {
            bubbleBackground: 'rgba(0, 0, 255, .1)',
            bubbleFromUserBackground: 'rgba(0, 255, 0, .1)',
            rootHeight: '380px',
            rootWidth: window.innerWidth > 420 ? '420px' : `${window.innerWidth - 50}px`,
            botAvatarImage: '/imgs/rosie.jpg'
        };
        window.WebChat.renderWebChat(
            {
                directLine: window.WebChat.createDirectLine({
                    token: 'v4RyeBauQlM.DQNmiG50m_FX1YBI8EGQMKVPVIPHUbSGhWcpEFLYS3Q'
                }),
                // Passing 'styleOptions' when rendering Web Chat
                styleOptions,
                userID: 'Browser',
                username: 'Web Chat User',
                locale: 'en-US'
            },
            document.getElementById('webchat')
        );
    </script>
}